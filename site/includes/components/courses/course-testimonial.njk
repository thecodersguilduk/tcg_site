{% if course.testimonials.length > 0 %}
<section id="testimonials">
  <div class="testimonials block p-4 xl:px-32 py-32 flex-col justify-center items-center gap-16 self-stretch bg-gradient-to-r from-red-1000 to-purple-1000 section-rounded -mt-16">
    <div class="mx-auto">
      <h2 class="text-center text-white mb-8 md:mb-14">What learners say about this course</h2>
    </div>
    <div class="testimonials__slider">
      {% for testimonial in course.testimonials %}
      <div>
        <div class="flex flex-col lg:flex-row gap-2 justify-center items-center self-stretch">
          <!-- <div class="block pl-6 pr-2 mx-auto md:w-5/12">
          </div> -->
          <div id="course-testimonial-image-container">
            <div class="course-testimonial-avatar" style="background: url('{{ testimonial.avatar }}'), lightgray; background-repeat: no-repeat; background-size: cover; background-position: 50% "></div>
          </div>
  
  
          <div class="sm:p-10 pt-12 px-8 pb-8 md:w-7/12">
            <div class="flex gap-2 items-center">
              <div class="block bg-white h-1 w-12 rounded"></div>
              <p class="text-white text-sm font-bold leading-lg tracking-wide">Success Stories</p>
            </div>
            
            <div class="sm:flex sm:gap-6 sm:items-center">
              <div class="relative text-white">
                <p class="text-5xl text-white font-bold leading-5xl">{{ testimonial.highlight }}</p>
                <p class="text-md leading-lg text-white font-semibold">{{ testimonial.testimonial }}</p>
                <p class="mb-2 text-lg text-white font-bold">{{ testimonial.client }}</p>
                <p class="text-sm leading-sm font-heading font-bold mb-2 text-white">{{ testimonial.occupation }}</p>
              </div>
            </div>
  
          </div>
        </div>
      </div>
          
      {% endfor %}
      
    </div>
    <div class="flex justify-center items-center mt-8">
      <button type="button" class="prev mr-6">
        <img src="../../images/icons/chevron-right-white.svg" class="h-6 w-6 m-auto" />
      </button>
      <div class="dots"></div>
      <button type="button" class="next ml-6">
        <img src="../../images/icons/chevron-left-white.svg" class="h-6 w-6 m-auto" />
      </button>
    </div>
    </div>
    </div>
</section>

{% endif %}

