{% for instance in course.instances | limit(2) %}
  <div class="flex flex-col p-6 rounded border-1 border-grey-1000 gap-4">
    <p class="text-sm font-bold leading-md">Week Commencing</p>
    <p class="text-lg font-bold leading-2xl">
      {{ instance.date | dateDisplay }}
    </p>
    <a href="{% if course.formLink %} {{ course.formLink }} {% else %}#contact{% endif %}" target="_blank" aria-describedby="date" class="bg-green-100 rounded flex p-4 justify-center items-center gap-2 self-stretch">
      <span class="text-white font-bold text-sm">{{course.ctaText}}</span>
      <i class="fa-solid fa-chevron-right ml-2 text-white"></i>
    </a>
    <div class="flex flex-col items-start gap-6 self-stretch content">{{ instance.description | safe }}</div>
  </div>
{% endfor %}
      