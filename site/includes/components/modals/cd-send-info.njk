<div id="cd-send-info" class="modal">
  <div class="modal-inner bg-white rounded shadow-secondary">
    <button class="modal-close" aria-label="close" data-modal="cd-send-info"></button>
    <div class="modal-content px-6 md:px-8 py-8">
      <div class="center-content">
        <h2 class="text-center mt-8">Info for {{course.title}}</h2>
        <p class="text-center mb-8">Fill in your details and weâ€™ll send you some info</p>
      </div>
      <div class="">
        <form action="/thanks-send-info/" data-netlify="true" name="cd-send-info" method="POST">
          <fieldset>
            <div class="">
              <label class="form-label sr-only" for="course_title">I'm enquiring about...</label> 
              <input id="course_title" class="form-input-field rounded block w-full py-2 px-3 border-1 placeholder-black" type="hidden" value="{{course.title}}" name="course_title" required="">
            </div>
            <div class="mb-4">
              <label class="form-label sr-only" for="name">Full name</label> 
              <input id="name" class="form-input-field rounded block w-full py-2 px-3 border-1 placeholder-black" type="name" placeholder="Full name" name="_name" required="">
            </div>
            <div class="mb-4">
              <label class="form-label sr-only" for="email">Your email</label> 
              <input id="email" class="form-input-field rounded block w-full py-2 px-3 border-1 placeholder-black" type="email" placeholder="Your work email" name="_replyto" required="">
            </div>
            <div class="">
              <div class="mt-8">
                <button class="rounded font-heading font-bold w-full block py-2 px-6 border border-transparent text-white bg-blue-200 hover:bg-blue-100 focus:border-blue-100 active:bg-blue-100 transition duration-150 ease-in-out">Send</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>