
  {% if apprenticeships.active %}
    <h2 class="text-white mb-12">Our Apprenticeships</h2>
    <div class="flex flex-wrap -mx-4 mb-4">
      {% for item in  apprenticeships.active %}
          <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 mb-8">
            <div class="bg-white px-6 py-8 rounded-lg shadow-primary h-full">
              <div class="flex flex-col items-start h-full">
                <object type="image/svg+xml" data="../images/icons/Group-79.svg" class="mb-2"></object>
                <h3 class="text-xl leading-lg mb-0">{{ item.title }}</h3>
                <h3 class="text-xl leading-lg mb-2">{{ item.qualification }}</h3>
                <div class="mt-auto">
                  <p class="font-bold leading-sm font-heading mb-4">I want to...</p>
                  <div class="mb-4">
                    <a href="{{ item.apprentice_link }}" class="inline-block bg-blue-200 text-white font-heading font-bold text-md leading-sm py-2 px-6 rounded whitespace-no-wrap">Be a Developer</a>
                  </div>
                  <div>
                    <a href="{{ item.employer_link }}" class="inline-block bg-red-100 text-white font-heading font-bold text-md leading-sm py-2 px-6 rounded whitespace-no-wrap">Hire a Developer</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
      {% endfor %}
    </div>

  {% endif %}

  {% if apprenticeships.coming_soon %}
    <h2 class="text-white mb-12">Coming Soon</h2>
    <div class="flex flex-wrap -mx-4">
    {% for item in apprenticeships.coming_soon %}
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4 mb-8">
        <div class="bg-white px-6 py-8 rounded-lg shadow-primary h-full">
          <div class="flex flex-col items-start h-full">
            <object type="image/svg+xml" data="../images/icons/Group-79.svg" class="mb-2"></object>
            <h3 class="text-xl leading-lg mb-0">{{ item.title }}</h3>
            <h3 class="text-xl leading-lg mb-2">{{ item.qualification }}</h3>
            <div class="mt-auto opacity-25">
              <p class="font-bold leading-sm font-heading mb-4">I want to...</p>
              <div class="mb-4">
                <button class="inline-block bg-blue-200 py-2 px-6 rounded text-white font-heading font-bold text-md leading-sm whitespace-no-wrap" disabled>Hire apprentice</button>
              </div>
              <div>
                <button class="inline-block bg-red-100 py-2 px-6 rounded text-white font-heading font-bold text-md leading-sm whitespace-no-wrap" disabled>Find a position</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
    </div>
  {% endif %}
