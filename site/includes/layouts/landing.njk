      <div class="w-full lg:w-5/12">
        <h3 class="text-white font-bold text-2xl">Fill in the form below or use our live chat to book a call.</h3>
        {% include '../../includes/components/forms/blog-eoi.njk' %}
      </div>
    </div>
  </section>

  {% if landingPage.blogPosts | length > 0 %}
  <section class="px-6 lg:px-32 py-16 bg-white flex flex-col items-center">
    <div class="flex flex-col gap-8 justify-center items-center self-stretch">
        <h2>Featured Blog Posts</h2>
        <div class="flex flex-col md:flex-row justify-center items-start gap-8 self-stretch">
            {% for post in landingPage.blogPosts %}
                <div class="w-full md:w-6/12 xl:w-4/12 md:px-3 w-full h-full mb-8 sm:mb-10 lg:mb-0 max-w-none self-stretch">
                    <div class="flex flex-col rounded-lg shadow-primary md:h-full overflow-hidden">
                      {% if post.mainImage %}
                        <div class="flex-shrink-0">
                          <img class="h-56 w-full object-cover" data-lazy="{{ post.mainImage }}" alt="{{ post.title }}" />
                        </div>
        
                      {% endif %}
                      <div class="flex-1 bg-white px-4 md:px-6 py-6 flex flex-col justify-between relative">
                        <div class="flex-1 mt-2">
                          {% if post.category %}
                            <div class="category absolute top-0 flex -my-4 -mx-1">
                              {% for item in post.tags %}
                                {% if item.name !== "blog" %}
                                  <div class="px-1">
                                    <a href="/category/{{ item.name }}" class="p-2 bg-red-100 text-white font-bold rounded block font-heading text-sm leading-sm">{{ item.name | capitalize }}</a>
                                  </div>
                                {% endif %}
                              {% endfor %}
                              </div>
                          {% endif %}
        
                            <a href="../blog/{{ post.slug.current }}" class="block"><h3 class="text-blue-200 max-w-90 mb-4">{{ post.title }}</h3></a>
                            <p class="mb-6 sm:mb-4 text-sm leading-md">{{ post.excerpt }}</p>
        
                        </div>
                        <div class="flex">
                          <div class="mr-2 w-10 h-10">
                            <img src="{{post.avatar}}" alt="{{post.authors[0].name}}" class="w-full h-full object-cover rounded-50 block" />
                          </div>
        
                          <div class="{% if post.data.time %}my-auto{% else  %}mt-auto{% endif %}">
                            {% if post.time %}
                              <p class="time text-blue-200 font-bold font-heading mb-1 text-md sm:text-sm leading-sm">{{ post.time }} mins read time</p>
                            {% endif %}
        
                            <div class="">
                              <p class="author text-black text-sm leading-sm sm:text-xs sm:leading-xs">
                                By {{ post.authors[0].name }}
                                {% if post.publishedAt %}
                                  <span class="text-black text-sm leading-sm sm:text-xs sm:leading-xs my-auto">&#8210;</span>
                                  <time datetime="{{ post.publishedAt }}" class="text-black text-sm leading-sm sm:text-xs sm:leading-xs my-auto">
                                    {{ post.publishedAt| dateDisplay }}
                                  </time>
                                {% endif %}
                              </p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
  </section>
  {% endif %}

